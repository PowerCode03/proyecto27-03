@page
@model proyecto.App.Presentacion.Pages.Usuarios.ListModel
@{
     //var searchString = Model.searchString; 
     ViewData["Title"] = "Lista de Usuarios";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-6">
                <h2><div class="text-info">Lista de Usuarios</h2>
            </div>
            <div class="col-sm-6">
                <a asp-page="Crear" class="btn-primary btn-primary">Crear Nuevo Usuario</a>
            </div>            
        </div>    
    </div>
    <div class="card-body">
        @if (Model.Usuarios.Count() > 0) {
            <br /><br />
            <table class="table table-striped border">
                <tr class="table-secondary">
                 <th>@Html.DisplayNameFor(m => m.Usuarios.First().idUsuario)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().IdentificacionU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().PrimerNombreU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().SegundoNombreU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().PrimerApellidoU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().SegundoApellidoU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().TelefonoU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().EmailU)</th>
                    <th>@Html.DisplayNameFor(m => m.Usuarios.First().DireccionU)</th>
                
                    <th>ACCION1</th>
                    <th>ACCION2</th>
                    <th>ACCION3</th>
                </tr>
                @foreach (var item in Model.Usuarios)  {
                <tr>
                    <td>@item.idUsuario</td>
                    <td>@item.IdentificacionU</td>
                    <td>@item.PrimerNombreU</td>
                    <td>@item.SegundoNombreU</td>
                    <td>@item.PrimerApellidoU</td>
                    <td>@item.SegundoApellidoU</td>
                    <td>@item.TelefonoU</td>
                    <td>@item.EmailU</td>
                    <td>@item.DireccionU</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-UsuarioId="@item.idUsuario">
                            Detalle</a>
                    </td>

                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-UsuarioId="@item.idUsuario">
                            Editar
                        </a>
                    </td> 

                    <td>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-UsuarioId="@item.idUsuario">
                            Eliminar
                        </a>
                    </td> 
                </tr>    }
            </table>
        }else{
            <p>No hay Usuarios disponibles</p>
        }
    </div>
</div>

